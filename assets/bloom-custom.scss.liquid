.button {
    border: 1px solid #2e4433;
    padding: 11px 27px;
    font-family: Apercu Pro;
    font-size: 12px;
    font-weight: bold;
    line-height: 1.43;
    letter-spacing: 2.5px;
    text-align: center;
    color: #ffffff;
    background-color: #2e4433;
    &:hover {
      color: #ffffff;
    }
}

.bloom__simple-container {
  .address {
    text-align: left;
  }
  .row > div {
    width: 100%;
  }
  #membership_shipping_instructions {
   display: block;
    margin-bottom: 20px;
    width: 100%;
  }
  @media screen and (max-width: 767px) {
    label {
      display: flex!important;
    }
  }
		 
}

.bloom__body {
  margin-top: 90px;
  margin-bottom: 40px;
}


.Bloom__Signup__SubmitButton.uk-button-primary {
  font-family: 'Apercu Pro';
  font-size: 12px;
  font-weight: bold;
  min-height: 43px;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.33;
  letter-spacing: 2px;
  text-align: center;
  color: #f5f5f3;
  background-color: #2e4433;
  padding: 8px;
  padding-right: 8px;
  padding-left: 8px;
  outline: 0px;
  border: 0px;
}


.Bloom__Signup__SubmitButton.uk-button-primary:disabled,
.Bloom__Signup__SubmitButton.uk-button-primary[disabled] {
  opacity: .3;
  background-color: #2e4433;
  color: #f5f5f3;
}


.Bloom__Signup__SubmitButton.uk-button-primary:hover  {
  background-color: #2e4433;
  color: #f5f5f3;
  border: 0px;
}


