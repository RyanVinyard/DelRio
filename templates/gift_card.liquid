</div>
  <div class="div_copon_77 text-center">
  <p class="btn_pro_giftcardss"><a href="https://delriovineyards.com/collections/all" class="c-btn c-btn--primary c-btn--arrow giftcard__shop-link bg_new_color" target="_blank">START SHOPPING</a></p> 
  <!-- 	  PRINT QR CODE		 -->
  <p class="pa_gift-0066">
    <button type="button" class="c-btn c-btn--grey giftcard__print-link" onclick="$('#div2').print();">
      Print this gift card
    </button>
  </p>
  </div>
  <script>
    new QRCode(document.getElementById("qr-code"), {
      text: "{{ gift_card.qr_identifier }}",
      width: 120,
      height: 120
    });
     $.fn.extend({
          print: function() {
              var frameName = 'printIframe';
              var doc = window.frames[frameName];
              if (!doc) {
                  $('<iframe>').hide().attr('name', frameName).appendTo(document.body);
                  doc = window.frames[frameName];
              }
              doc.document.body.innerHTML = this.html();
              doc.window.print();
              return this;
          }
      });
  </script>
  <footer>
    {% if gift_card.pass_url %}
    <a href="{{ gift_card.pass_url }}">
      <img id="apple-wallet-badge" src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}" width="120" height="40" alt="Add To Apple Wallet">
    </a>
    {% endif %}
  </footer>
