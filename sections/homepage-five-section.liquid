   .padding_up .spr-badge[data-rating="5.0"] .spr-badge-starrating .spr-icon {
    	font-size: 80% !important;
	}
  }
  @media screen and (max-width:1700px) {
    .d-flex.padding_upspacebetweennewdesign {
	height: 60px;
}
