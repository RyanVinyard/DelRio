    font-stretch: normal !important;
    line-height: 1.25;
    font-weight: 500;
    color: #2e4433 !important;
  }
  p.winetypevendornewhomepgde {
    opacity: 0.6;
    font-family: Apercu Pro;
    font-size: 12px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.17;
    letter-spacing: 1px;
    color: #2e4433;
    margin-bottom:2px;
    text-transform:uppercase;
  }
  .spr-badge-starrating {
    margin: 0 0px 0 0;
  }
  .spr-badge[data-rating="0.0"] {
    display: grid;
    text-align: right;
    font-family: Apercu Pro;
    font-size: 10px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
