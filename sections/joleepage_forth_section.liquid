<style>
  p.SHOP_joleee.shop_joliee:hover {
    background-color:#8f4b33;
    color:white;
  }
  
</style>

<!-- jolee section 4 -->

<div class="jolee_section_4 animatioN-on_scroll_margin_top" id="jolee_sec1_button_url_00">
    <div class="container">
        <h1 class="Jolee-Wines-captures_jole">{{section.settings.jolee_sec4_heading}}<span>{{section.settings.jolee_sec4_wine_name}}</span></h1>
        <div class="row justify_jolie">
            <div class="owl-carousel owl-theme" id="carousel_shop_all299">
            {% assign collectionallproducts = collections['jolee'].products  |  sort: 'price' | reverse %}
              {% for product in collectionallproducts %}
                  <div class="col-lg-4 col-md-6 col-sm-12 flower_jolee_red_34 rpnt_max_width_100">
                        <div class="text-center png_carbernet_jolie product-url"  data-product-url="{{product.url}}"  style="cursor: pointer;">
                          <a href="{{ product.url }}"><img class="displaY_me_inerhit_789444" src="{% if product.featured_image.size > 0 %}{{ product.featured_image | product_img_url: 'master' }}{% else %}{{ 'no_image1.png' | asset_url }}{% endif %}" alt=""> </a>
                          <a href="javascript:void(0)"
                             data-product-id="{{ product.id }}"
                             class="add-to-cart-custom{% if product.available == true %} add-to-cart-blur{% endif %}"
                             data-product-id="{{ product.id }}"
                             {% if product.available == false %}disabled {% endif %}
                          >
                            <p class="SHOP_joleee shop_joliee" > {% if product.available == false %}SOLD OUT {% else %} ADD TO CART - {{product.price|money}} {% endif %} </p>
                          </a>

                        </div>
                        <div class="text_below_jolee">
                            <a href="{{ product.url }}"><p class="Ros-Jolee_jolie">{{product.title}}</p></a>
                            <p class="Sweet-Bubbly_jolee Sweet-Bubbly_j00_jole_pgi">{{block.settings.jolee_sec4_Wine_Taste2}}</p>
                            <div class="d-flex justify-content-center">
        <!--                         <p class="class-star_rating_jile">★★★★★</p>
                                <p class="-Reviews_jolie">{{block.settings.jolee_sec4_rating2}}</p> -->
                            </div>
<!--                             <p class="Perfect-companions-d_jolie">{{product.description}}</p> -->
<!--                           <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span> -->
                        </div>
                    {% include 'products-modal-cart',product %}    
                 </div>           
              {% endfor %}
          </div>
        </div>
    </div>
</div>


