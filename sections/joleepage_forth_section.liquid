 jQuery('.product-url').on('click',function(e){
	e.preventDefault();
	var productURL = jQuery(this).attr('data-product-url');
	window.location.href = productURL;
	e.stopPropagation();
});				


  jQuery('.add-to-cart-custom').on('click', function(e){
    e.preventDefault();
	//jQuery("#site-main").addClass("blur");
