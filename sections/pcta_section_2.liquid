<div class="outer-content">
  <div class="container">
    <div class="ptca-main-content">
      <div class="ptca-video">
        <iframe src="{{ section.settings.video_link }}" width="100%" height="338" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
