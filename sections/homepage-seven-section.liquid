{% comment %}

<div class="section_7">
    <div class="container">
      <div class="row">
  
        <div class="col-lg-6 col-md-6 col-sm-12 roundman">
          <div class="man_tree">
            <div class="man_images text-center">
              <img class="man_image_size" src="{{section.settings.Section7_img | img_url:'master'}}" alt="background_image">
              <a href="javascript:void(0)" id="video_button">
              <div class="play_button">
                <img src="{{ 'perk_red_7.png' | asset_url }}" alt="play video">
              </div>
              </a>
            </div>
          </div>
      </div>
  
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="text-center Layers-of_center">
            <h1 class="Layers-of-complexity"> {{section.settings.Section7_heading}}</h1>
          </div>   
          <hr class="break_hr_1">        
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 history">
              <p class="OUR-PHILOSOPHY our_story">WINEMAKING</p>
              <div class="rolling_hills">
                <p>{{section.settings.Section7_desc}}</p>
              </div>
            </div>
          </div>
          <a class="no_dec_home"  href="{{section.settings.Section7_story_link}}"><p class="OUR-PHILOSOPHY our_story">MEET THE WINEMAKERS</p></a>
           <hr class="accolades">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 roundman1">
          <div class="man_tree">
            <div class="man_images text-center">
              <img src="{{section.settings.Section7_img | img_url:'master'}}">
              <a href="javascript:void(0)" id="video_button_66">
              <div class="play_button">
                <img src="{{ 'perk_red_7.png' | asset_url }}" alt="play video">
              </div>
              </a>     
            </div>
          </div>
      </div>
      </div>
    </div>
  </div>
