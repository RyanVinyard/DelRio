<div data-bloom-product-form-config='{{ section.settings | json }}'
     data-bloom-product-id="{{product.id}}"
     data-bloom-product-price="{{product.price}}"
></div>

<style>
</style>

<script>
  function initializeBloomProductForm() {
    var config = JSON.parse(document.querySelector("[data-bloom-product-form-config]").dataset["bloomProductFormConfig"])
    bloom.storage().setItem('productForm', config)
  }
  document.addEventListener('shopify:section:load', initializeBloomProductForm);
  initializeBloomProductForm()

</script>

