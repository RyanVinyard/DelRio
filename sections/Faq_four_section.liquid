<div id="howdoipayforgood" class="animatioN-on_scroll_margin_top Contact-Info_text_faq h1_faq_ques_margin_bottom">
  <h1>{{ section.settings.faqsec2texttitle3 }}</h1>

  <!-- accordion -->

  <main class="main accordion_ch_faq">

    <div class="accordion">
     {% for block in section.blocks %} 
      <div class="accordion-item">
        <h3 class="title">
          <span>{{ block.settings.faqsec2textquest2 }}</span>
          <i class="fa fa-chevron-down"></i>
        </h3>
        <p class="paragraph"> {{ block.settings.faqsec2textanswer2 }}
                     </p>
      </div>
      {% endfor %}
      
  
      
    </div>
  </main>
</div>

 





{% schema %}
  {
    "name": "Faq Four Section",
    "settings": [
      {
          "id": "faqsec2texttitle3",
          "type": "textarea",
          "label": "Enter Title"
      }
],
  "blocks": [
    {
      "type": "select",
      "name": "Question",
      "settings": [
        {
          "id": "faqsec2textquest2",
          "type": "textarea",
          "label": "Enter Question"
        },
        {
          "id": "faqsec2textanswer2",
          "type": "textarea",
          "label": "Enter Answer"
        }
      ]
    }
  ]
}
